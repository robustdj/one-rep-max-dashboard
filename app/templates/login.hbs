<div class=" has-background-black-ter is-fullheight">
  <div class="section container">
    <div class="columns is-centered">
      <div class="column is-half">
        <div class="panel has-background-white">
          <h3 class="is-size-3 has-text-centered p-t-md">One Rep Max Dashboard</h3>
          <div class="section">
            {{#if this.errorMessage}}
              <div class="notification is-danger">
                {{this.errorMessage}}
              </div>
            {{/if}}
            <div class="field">
              <label class="label">Email</label>
              <div class="control">
                <Input @value={{email}} class="input is-medium" placeholder="Enter email" />
              </div>
            </div>

            <div class="field">
              <label class="label">Password</label>
              <div class="control">
                <Input @value={{password}} type="password" class="input is-medium" placeholder="Enter password" />
              </div>
            </div>

            <div class="field m-t-lg">
              <div class="control has-text-right">
                <button {{on "click" this.authenticate}} type="submit" class="button is-primary is-medium is-fullwidth">Sign In</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>